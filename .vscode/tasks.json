      "command": "cd backend && ./gradlew bootRun",
      "isBackground": true,
      "presentation": {
        "panel": "dedicated",
        "echo": true
      }
    },
    {
      "label": "Frontend",
      "type": "shell",
      "command": "cd frontend && ng s",
